<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context=".activity.MationDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#ffffff"
        android:paddingHorizontal="@dimen/dp_12"
        android:orientation="horizontal">

        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_15"
            android:text="资讯详情"
            android:id="@+id/title"
            android:textColor="@color/bleak"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:src="@mipmap/common_icon_back_black_n" />
        <ImageView
            android:id="@+id/head"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:visibility="gone"
            android:src="@drawable/boy" />
        <ImageView
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:src="@mipmap/common_nav_message_black_n" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_main"
        android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/dp_6"
        android:background="#ffffff"
        android:id="@+id/scrollView"
        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lin"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/title2"
                android:maxLines="2"
                android:minLines="2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aaa"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#333333"
                    android:id="@+id/name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aaa"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:textColor="#333333"
                    android:id="@+id/time"
                    />
            </LinearLayout>
        </LinearLayout>
    <WebView
        android:layout_below="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView"
        android:layout_marginHorizontal="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        ></WebView>



    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/common_button_share_n"
            android:id="@+id/fenxaing"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:button="@null"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_50"
            />
        <RadioButton
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/zx_detail_shoucang"
            android:id="@+id/shoucang"
            android:layout_above="@+id/fenxaing"
            android:layout_marginRight="@dimen/dp_20"
            android:button="@null"
            android:layout_marginBottom="@dimen/dp_26"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:layout_width="@dimen/dp_193"
            android:layout_height="@dimen/dp_132"
            android:src="@mipmap/reward"
        android:visibility="gone"
            android:id="@+id/yes"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:id="@+id/close"
            android:visibility="gone"
            android:src="@drawable/close"
            android:layout_toRightOf="@+id/yes"
            android:layout_marginTop="@dimen/dp_140"
            />
    </RelativeLayout>
</LinearLayout>
