<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#eee"
    android:layout_marginBottom="@dimen/dp_76"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.bw.health.view.BookPageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:id="@+id/bookView"
            android:clickable="true"
            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_32"
        >
        <ImageView
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:id="@+id/head"
            android:src="@drawable/boy"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/search_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="#ffffff"
            android:id="@+id/search"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:text="病症,药品名称"
            />
        <ImageView
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:id="@+id/messige"
            android:src="@mipmap/common_nav_message_white_n"

            />
    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:background="#fff"
        android:gravity="center_vertical"
        >
        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_18"
            android:background="#3087ea"
            android:layout_marginLeft="@dimen/dp_12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_16"
            android:text="知识宝典"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eee"
        android:layout_marginTop="@dimen/dp_2"
        >
        <LinearLayout
            android:background="#fff"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常见病症"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="#de333333"
                android:layout_marginTop="@dimen/dp_10"
                />
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_157"
            android:layout_height="@dimen/dp_157"
            android:src="@mipmap/common_disease"
            />
        </LinearLayout>
        <LinearLayout
            android:background="#fff"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_3"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常用药品"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="#de333333"
                android:layout_marginTop="@dimen/dp_10"
                />
            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_157"
                android:layout_height="@dimen/dp_157"
                android:src="@mipmap/common_drugs"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#fff"
        android:gravity="center_vertical"
        >
        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_18"
            android:background="#3087ea"
            android:layout_marginLeft="@dimen/dp_12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_16"
            android:text="问诊资讯"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/internal_medicine"
                    android:id="@+id/nei"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="内科"
                        android:textColor="#333333"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/ophthalmology"
                    android:id="@+id/yan"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="眼科"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/orthopedics"
                    android:id="@+id/gu"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="骨科"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/pediatrics"
                    android:id="@+id/xiaoer"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小儿科"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/infectious_disease"
                    android:id="@+id/chuanran"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="传染病科"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/dermatology"
                    android:id="@+id/pifu"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="皮肤病科"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/otolaryngology"
                    android:id="@+id/erhoubi"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="耳喉鼻科"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/psychiatry"
                    android:id="@+id/jingshenbing"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="精神病科"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#fff"
        android:gravity="center_vertical"
        >
        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_18"
            android:background="#3087ea"
            android:layout_marginLeft="@dimen/dp_12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_16"
            android:text="健康测评"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:src="@mipmap/health_assessment"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#fff"
        android:gravity="center_vertical"
        >
        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_18"
            android:background="#3087ea"
            android:layout_marginLeft="@dimen/dp_12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_16"
            android:text="健康资讯"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rg"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:id="@+id/one"
            android:textColor="@drawable/textcolor_bg"
            android:text="健康要闻"
            android:gravity="center"
            android:layout_weight="1"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:id="@+id/two"
            android:textColor="@drawable/textcolor_bg"
            android:text="医学动态"
            android:gravity="center"
            android:layout_weight="1"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:id="@+id/three"
            android:gravity="center"
            android:textColor="@drawable/textcolor_bg"
            android:text="医疗动态"
            android:layout_weight="1"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:id="@+id/four"
            android:textColor="@drawable/textcolor_bg"
            android:gravity="center"
            android:text="养生美容"
            android:layout_weight="1"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:id="@+id/five"
            android:gravity="center"
            android:textColor="@drawable/textcolor_bg"
            android:text="健身减肥"
            android:layout_weight="1"
            />
    </RadioGroup>
</LinearLayout>
</androidx.core.widget.NestedScrollView>
