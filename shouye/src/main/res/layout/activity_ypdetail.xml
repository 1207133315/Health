<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#eee "
    android:layout_height="match_parent"
    tools:context=".activity.BZDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#ffffff"
        android:paddingHorizontal="@dimen/dp_12"
        android:id="@+id/top"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/head"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:src="@drawable/boy" />

        <ImageView
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:src="@mipmap/common_nav_message_black_n" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_6"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:background="#f10e1d"
            android:text="本模块知识仅供参考,如有需要,请在医生指导下使用"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/dp_20"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/blue"
                    android:text="[药品成分]"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:id="@+id/chengfen"
                    android:lineSpacingExtra="@dimen/dp_8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/blue"
                    android:text="[用药禁忌]"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:id="@+id/jinji"

                    android:lineSpacingExtra="@dimen/dp_8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/blue"
                    android:text="[功能主治]"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:id="@+id/zhuzhi"

                    android:lineSpacingExtra="@dimen/dp_8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/blue"
                    android:text="[用法用量]"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:id="@+id/yongliang"
                    android:lineSpacingExtra="@dimen/dp_8"
                    />
                <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/blue"
        android:text="[药品性状]"
        android:layout_marginTop="@dimen/dp_20"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            android:id="@+id/xingzhuang"
            android:lineSpacingExtra="@dimen/dp_8"
            />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/blue"
                    android:text="[包装规格]"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:id="@+id/guige"
                    android:lineSpacingExtra="@dimen/dp_8"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/blue"
                    android:text="[不良反应]"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:id="@+id/fanying"
                    android:lineSpacingExtra="@dimen/dp_8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/blue"
                    android:text="[贮藏条件]"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:id="@+id/tiaojian"
                    android:lineSpacingExtra="@dimen/dp_8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/blue"
                    android:text="[注意事项]"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:id="@+id/shixiang"
                    android:lineSpacingExtra="@dimen/dp_8"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/blue"
                    android:text="[批准文号]"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:id="@+id/wenhao"
                    android:lineSpacingExtra="@dimen/dp_8"
                    />
    </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</LinearLayout>
