<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".activity.DoctordetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="#fff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_40"
            android:src="@mipmap/common_icon_back_black_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:text="医生详情"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/dp_20">
            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_128"
                android:src="@color/colorAccent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#333333"
                        android:text="曾小小"/>
                    <TextView
                        android:id="@+id/zhiwu"
                        android:layout_toRightOf="@+id/name"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="#333333"
                        android:text="曾小小"/>
                    <ImageView
                        android:id="@+id/xin"
                        android:src="@mipmap/common_icon_attention_large_n"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/yiyuan"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/haopinlv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#333333"
                        />
                    <TextView
                        android:id="@+id/fuwu"
                        android:layout_width="wrap_content"
                        android:text="服务患者数"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_14"
                        android:background="#3087ea"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="他收到的礼物"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#333333"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_44"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:src="@mipmap/flower"
                        android:layout_height="@dimen/dp_44" />
                    <ImageView
                        android:layout_width="@dimen/dp_44"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:src="@mipmap/certificate"
                        android:layout_height="@dimen/dp_44" />
                    <ImageView
                        android:layout_width="@dimen/dp_44"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:src="@mipmap/cup"
                        android:layout_height="@dimen/dp_44" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/flower"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:gravity="center_horizontal"
                        android:text="10"/>
                    <TextView
                        android:id="@+id/shu"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="#333333"
                        android:gravity="center_horizontal"
                        android:text="10"/>
                    <TextView
                        android:id="@+id/cup"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:gravity="center_horizontal"
                        android:text="10"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_height="@dimen/dp_14"
                android:background="#3087ea"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="个人简介"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:id="@+id/jianjie"
            android:text="无"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:textColor="#333333"
            android:lineHeight="@dimen/dp_14"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_height="@dimen/dp_14"
                android:background="#3087ea"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="擅长领域"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:id="@+id/shanchang"
            android:text="无"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:textColor="#333333"
            android:lineHeight="@dimen/dp_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_height="@dimen/dp_14"
                android:background="#3087ea"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="用户评价"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:gravity="center_vertical"

                android:layout_marginLeft="@dimen/dp_6"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pingjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{asdadad}"
                android:textSize="@dimen/sp_10"
                android:textColor="#333333"/>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recy"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"

        android:background="@drawable/linner3"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/zixun"
            android:text="立即咨询"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn2"
            android:layout_width="@dimen/dp_117"
            android:textColor="#fff"
            android:layout_height="@dimen/dp_40" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/zixun"
            android:text="520h"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>