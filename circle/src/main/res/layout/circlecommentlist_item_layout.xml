<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--有评论-->
    <RelativeLayout
        android:id="@+id/circle_pop_youpinglun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_20">

        <RelativeLayout
            android:id="@+id/circle_pop_doctor_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/circle_pop_doctor_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:placeholderImage="@mipmap/doctor"
                app:roundAsCircle="true" />

            <ImageView
                android:id="@+id/circle_pop_doctor_renzheng"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:src="@mipmap/circle_pop_authenticate_n" />
        </RelativeLayout>


        <!--1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/circle_pop_doctor_layout"
            android:orientation="horizontal">

            <!--2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_pop_bg"
                android:orientation="vertical"
                android:padding="@dimen/dp_12">

                <!--3-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/circle_pop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小楠楠"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/circle_pop_doctor_biaoshi"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/common_icon_inquiry_n" />
                </LinearLayout>

                <TextView
                    android:id="@+id/circle_pop_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="有大半年了，胸口骨头疼痛，按压会痛，早上起床或走路时不会痛。"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <!--3-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/circle_pop_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08/22/2018"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <CheckBox
                        android:id="@+id/circle_pop_goods1"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_6"
                        android:background="@drawable/sele_circle_pop_good1"
                        android:button="@null" />

                    <TextView
                        android:id="@+id/circle_pop_goods1_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="99"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />

                    <CheckBox
                        android:id="@+id/circle_pop_goods2"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_6"
                        android:background="@drawable/sele_circle_pop_good2"
                        android:button="@null" />

                    <TextView
                        android:id="@+id/circle_pop_goods2_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
