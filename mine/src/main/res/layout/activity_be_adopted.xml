<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingTop="@dimen/dp_20"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_15">

            <ImageView
                android:id="@+id/be_adopted_back"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/common_icon_back_black_n" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="被采纳的建议"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="#f2f2f2" />
        <!--///////////////////////////////////////////////////////////////////////////-->
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/be_adopted_rc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.jcodecraeer.xrecyclerview.XRecyclerView>

        <!--。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。-->
        <!--无信息页面-->
        <RelativeLayout
            android:id="@+id/layout_wu_magess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/no_magger_image"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginTop="@dimen/dp_100"
                    android:src="@mipmap/circle_no_message" />


                <TextView
                    android:id="@+id/no_magger_tvText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/no_magger_image"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="您暂时还没有建议被采纳！"
                    android:textColor="#333333" />
            </LinearLayout>
        </RelativeLayout>
        <!--。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。-->


    </LinearLayout>


</RelativeLayout>
