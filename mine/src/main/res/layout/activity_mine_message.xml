<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:id="@+id/aaa"
    tools:context=".activity.SetupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="#fff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_42"
            app:srcCompat="@mipmap/common_icon_back_black_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:text="我的信息"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#fff"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/touxiang"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="@dimen/dp_62">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="头像"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_14"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:id="@+id/head"
                android:src="@mipmap/common_icon_attention_large_n"
                app:roundAsCircle="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_height="@dimen/dp_1"></LinearLayout>

        <RelativeLayout
            android:id="@+id/nc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:text="昵称"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/n1"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_27"
                app:srcCompat="@mipmap/my_icon_next_n" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/n1"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#fff"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/xingbie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:text="性别"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/n2"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_27"
                app:srcCompat="@mipmap/my_icon_next_n" />

            <ImageView
                android:id="@+id/sex"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/common_icon_boy_n"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_toLeftOf="@+id/n2" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_height="@dimen/dp_1"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:id="@+id/tz"
            android:layout_height="@dimen/dp_60">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="体征"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_18"/>

            <ImageView
                android:id="@+id/n3"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/my_icon_next_n"
                android:layout_marginRight="@dimen/dp_27"/>
            <RelativeLayout
                android:layout_width="@dimen/dp_150"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/dp_10"
                android:layout_toLeftOf="@+id/n3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="身高"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:text="体重"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:text="年龄"/>
                <TextView
                    android:id="@+id/shengao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:layout_alignParentBottom="true"
                    android:text="165cm"/>
                <TextView
                    android:id="@+id/tizhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:text="50kg"/>
                <TextView
                    android:id="@+id/nianling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:layout_marginRight="@dimen/dp_6"
                    android:text="25"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#fff"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:id="@+id/youxiang"
            android:layout_height="@dimen/dp_34">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="邮箱"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_18"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="940011671@qq.com"
                android:textColor="#333333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_18"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_height="@dimen/dp_1"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:id="@+id/bdwx"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="绑定微信"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_18"/>

            <ImageView
                android:id="@+id/n4"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/my_icon_next_n"
                android:layout_marginRight="@dimen/dp_27"/>
            <TextView
                android:id="@+id/vxbd"
                android:layout_width="wrap_content"
                android:text="去绑定"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/n4"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#fff"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:id="@+id/shimingrenzheng"
            android:layout_height="@dimen/dp_34">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="实名认证"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_18"/>

            <ImageView
                android:id="@+id/n5"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/my_icon_next_n"
                android:layout_marginRight="@dimen/dp_27"/>
            <TextView
                android:id="@+id/rzbd"
                android:layout_width="wrap_content"
                android:text="去认证"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/n5"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_height="@dimen/dp_1"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:id="@+id/bdyhk"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="绑定银行卡"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_18"/>

            <ImageView
                android:id="@+id/n6"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/my_icon_next_n"
                android:layout_marginRight="@dimen/dp_27"/>
            <TextView
                android:id="@+id/yhkbd"
                android:layout_width="wrap_content"
                android:text="去绑定"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/n6"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">

    </RelativeLayout>
</LinearLayout>
