<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_main"
    tools:context=".activity.AddFileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="我的档案"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            app:srcCompat="@mipmap/common_icon_back_black_n" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#fff"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="[主要症状]"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@null"
            android:id="@+id/bingzheng"
            android:hint="请输入您的主要症状"
            android:paddingVertical="@dimen/dp_10"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="#999999" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="[现病史]"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@null"
            android:hint="请输入您的详细病史"
            android:id="@+id/bingshi"
            android:paddingVertical="@dimen/dp_10"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="[既往病史]"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@null"
            android:id="@+id/jBingshi"
            android:hint="请输入您的既往病史"
            android:paddingVertical="@dimen/dp_10"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="[最近一次治疗经历]"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@null"
            android:hint="请输入医院名称"
            android:paddingVertical="@dimen/dp_10"
            android:id="@+id/jingli"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="#999999" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@null"
            android:hint="请选择治疗开始时间"
            android:id="@+id/start_time"
            android:paddingVertical="@dimen/dp_12"
            android:textColorHint="#333333"
            android:textSize="@dimen/sp_12" />
            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                app:srcCompat="@mipmap/circle_icon_drop_down_n"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/select_time"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="#999999" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:background="@null"
                android:hint="请选择治疗结束时间"
                android:id="@+id/end_time"
                android:paddingVertical="@dimen/dp_12"
                android:textColorHint="#333333"
                android:textSize="@dimen/sp_12" />
            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                app:srcCompat="@mipmap/circle_icon_drop_down_n"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/select_time2"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="#999999" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@null"
            android:hint="请输入治疗过程"
            android:paddingVertical="@dimen/dp_10"
            android:id="@+id/guocheng"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="[相关图片]"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:text="最多可上传6张图片,长按为图片排序"
            android:textSize="@dimen/sp_10"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/sp_10"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="#333333"
            android:background="#f2f2f2"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                app:srcCompat="@mipmap/add" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:id="@+id/ll"
                ></RelativeLayout>
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:background="@drawable/add_bnt"
            android:text="上传"
            android:gravity="center"
            android:textColor="#fff"
            android:id="@+id/yes"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_30"
            />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
