<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/aaa"
    tools:context=".activity.shiming.ShiMingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="#fff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_42"
            app:srcCompat="@mipmap/common_icon_back_black_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:text="实名认证"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_6"
        >


        <ImageView
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/id_card_front"
            android:layout_marginHorizontal="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_50"
             />
        <ImageView
            android:id="@+id/close1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignTop="@+id/front"
            android:layout_alignEnd="@+id/front"
            android:visibility="gone"
            android:src="@mipmap/common_icon_close_n" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_below="@+id/front"
            android:layout_marginHorizontal="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/id_card_back"
            android:id="@+id/contrary"
            />

        <ImageView
            android:id="@+id/close2"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:visibility="gone"
            android:layout_alignTop="@+id/contrary"
            android:layout_alignEnd="@+id/front"
            android:src="@mipmap/common_icon_close_n" />
        <TextView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_60"
            android:layout_marginHorizontal="@dimen/dp_40"
            android:text="下一步"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/yes"
            android:background="@drawable/add_bnt"
            android:layout_height="@dimen/dp_36" />
    </RelativeLayout>

</LinearLayout>
