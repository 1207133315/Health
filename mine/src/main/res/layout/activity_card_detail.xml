<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.shiming.CardDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:id="@+id/hh"
        android:background="#fff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_42"
            app:srcCompat="@mipmap/common_icon_back_black_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:text="查看银行卡信息"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_6"
    android:layout_below="@+id/hh"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/bank_card"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_20"
        android:layout_height="@dimen/dp_160">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="中国农业银行"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_26"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:text="储蓄卡"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/name"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginTop="@dimen/dp_28"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16"
                android:layout_below="@+id/name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/num1"
                android:text="****"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16"
                android:layout_below="@+id/name"
                android:layout_marginLeft="@dimen/dp_16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16"
                android:layout_below="@+id/name"
                android:layout_marginLeft="@dimen/dp_16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****"
                android:id="@+id/num2"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16"
                android:layout_below="@+id/name"
                android:layout_marginLeft="@dimen/dp_16"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑卡事件"
            android:textSize="@dimen/sp_10"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/sp_10"
            android:layout_marginRight="@dimen/sp_10"
            android:id="@+id/time"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_marginHorizontal="@dimen/dp_35"
        android:text="更换绑定"
        android:textSize="@dimen/sp_14"
        android:textColor="#fff"
        android:gravity="center"
        android:id="@+id/yes"
        android:background="@drawable/add_bnt"
        android:layout_height="@dimen/dp_36" />
</RelativeLayout>

</RelativeLayout>
