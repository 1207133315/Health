<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".activity.TaskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="#fff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_40"
            android:src="@mipmap/common_icon_back_black_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:text="我的任务"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_36"
                android:background="@mipmap/my_task_title"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_18"
                android:text="签到条"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_18"
                android:text="注：连续签到H币将会累积"
                android:textColor="#3087ea"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_15"></androidx.recyclerview.widget.RecyclerView>


        <com.wd.health.view.Myprogressbar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#fff" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"></androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_36"
                android:background="@mipmap/my_task_title"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_18"
                android:text="每日任务"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="签到"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/qiandao"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:background="@drawable/btnshape2"
                android:gravity="center"
                android:text="已完成"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首发病友圈"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+10"
                        android:textColor="#3087ea"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="H币"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/shoufabingyouquan"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:background="@drawable/btnshape2"
                android:gravity="center"
                android:text="已完成"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_25">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病友圈首评"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+10"
                        android:textColor="#3087ea"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="H币"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/bingyouquanshouping"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:background="@drawable/btnshape2"
                android:gravity="center"
                android:text="已完成"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:layout_width="@dimen/dp_114"
                android:layout_height="@dimen/dp_36"
                android:background="@mipmap/my_task_title"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_18"
                android:text="一次性任务"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完善我的信息"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+30"
                        android:textColor="#3087ea"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="H币"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/wanshanxinxi"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:background="@drawable/btnshape2"
                android:gravity="center"
                android:text="已完成"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与健康测评"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+10"
                        android:textColor="#3087ea"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="H币"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/jiankangceping"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:background="@drawable/btnshape2"
                android:gravity="center"
                android:text="已完成"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>