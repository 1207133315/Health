<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".activity.TaskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="#fff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_40"
            android:src="@mipmap/common_icon_back_black_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:text="我的任务"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/dp_100"
                android:text="签到条"
                android:background="@mipmap/my_task_title"
                android:textSize="@dimen/sp_14"
                android:textColor="#fff"
                android:gravity="center"

                android:layout_height="@dimen/dp_36" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="#3087ea"
                android:text="注：连续签到H币将会累积"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy1"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>


        <com.wd.health.view.Myprogressbar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginHorizontal="18dp"
            android:background="#fff" />

    </LinearLayout>

</LinearLayout>