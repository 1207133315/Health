<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_198"
    android:orientation="vertical">


    <com.wd.health.view.MyVideo1Player
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_168"


       ></com.wd.health.view.MyVideo1Player>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#fff"
            android:text="aaaaaaaa"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/bought"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/no"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"

            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/common_icon_toll_n"
            android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/buyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="两万人已购买"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:text="删除"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_50"
            android:text="两天前"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:src="@mipmap/common_icon_time_out_n"
        android:layout_centerInParent="true"
        android:id="@+id/stop"
        android:visibility="invisible"
        />
</RelativeLayout>
