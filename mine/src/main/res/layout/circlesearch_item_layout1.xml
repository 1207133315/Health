<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:orientation="vertical">

        <!--标题-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/circle_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="急性肠胃炎怎么办？"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
        <!--日期-->
        <TextView
            android:id="@+id/circle_list_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2019-12-19 18:11"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />
        <!--内容介绍-->
        <TextView
            android:id="@+id/circle_list_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="去年肠胃发炎了，经过输液，吃药好了。现在的问题是：不能吃油腻的东西，炒菜放的油多了也不行，吃了就恶心，想呕吐。"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <!--收藏 建议-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/circle_list_shoucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="#333333"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/circle_list_shoucang_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="10"
                android:textColor="#333333"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/circle_list_jianyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="建议"
                android:textColor="#333333"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/circle_list_jianyi_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="20"
                android:textColor="#333333"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/shanchu1"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentRight="true"
        android:src="@mipmap/collection_delete"
        android:visibility="gone" />
</RelativeLayout>
