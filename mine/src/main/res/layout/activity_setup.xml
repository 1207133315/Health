<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".activity.SetupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="#fff">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_42"
            app:srcCompat="@mipmap/common_icon_back_black_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:text="设置"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/grxx"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="@dimen/dp_62">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:id="@+id/head"
            android:src="@mipmap/common_icon_attention_large_n"
            app:roundAsCircle="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_toRightOf="@+id/head"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_14"/>
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/my_icon_next_n"
            android:layout_marginRight="@dimen/dp_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/xgmm"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="@dimen/dp_42">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_18"/>

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/my_icon_next_n"
            android:layout_marginRight="@dimen/dp_15"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#fff"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/qchc"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="@dimen/dp_42">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="清除缓存"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_18"/>

            <ImageView
                android:id="@+id/next"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/my_icon_next_n"
                android:layout_marginRight="@dimen/dp_15"/>
            <TextView
                android:id="@+id/daxiao"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/next"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="10M"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_height="@dimen/dp_1"></LinearLayout>
        <RelativeLayout
            android:id="@+id/pmld"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="@dimen/dp_42">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="屏幕亮度"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_18"/>

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/my_icon_next_n"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_height="@dimen/dp_1"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:id="@+id/bbjc"
            android:layout_height="@dimen/dp_42">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="版本检测"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_18"/>

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/my_icon_next_n"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#fff"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:id="@+id/bzzx"
            android:layout_height="@dimen/dp_42">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="帮助中心"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_18"/>

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/my_icon_next_n"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_height="@dimen/dp_1"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:id="@+id/gywm"
            android:layout_height="@dimen/dp_42">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="关于我们"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_18"/>

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/my_icon_next_n"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:background="#fff"
        android:id="@+id/yqhy"
        android:layout_height="@dimen/dp_42">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="邀请好友"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_18"/>

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/my_icon_next_n"
            android:layout_marginRight="@dimen/dp_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tcdl"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="@dimen/dp_42">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textColor="#d92109"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_14"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">

    </RelativeLayout>
</LinearLayout>
