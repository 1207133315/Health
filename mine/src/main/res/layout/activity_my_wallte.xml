<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyWallteActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/top"
        android:layout_height="@dimen/dp_308">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@mipmap/my_wallet_background"
    />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/common_icon_back_black_n"
                android:id="@+id/back"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的钱包"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="@color/white"
            />

    <TextView
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_116"
        android:background="@drawable/text_bg"
        android:layout_centerInParent="true"
        android:text="200"
        android:id="@+id/HBnum"
        android:gravity="center"
        android:textSize="@dimen/sp_48"
        android:textColor="#3087ea"
        />
        <TextView
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_30"
            android:text="提现"
            android:gravity="center"
            android:textColor="#3087ea"
            android:background="@drawable/my_wallet_bnt_bg"
            android:layout_alignParentBottom="true"
            android:id="@+id/reduce"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginBottom="@dimen/dp_30"
            />
        <TextView
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_30"
            android:text="充值"
            android:gravity="center"
            android:textColor="#3087ea"
            android:background="@drawable/my_wallet_bnt_bg"
            android:layout_alignParentBottom="true"
            android:id="@+id/add"
           android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_70"
            android:layout_marginBottom="@dimen/dp_30"
            />
    </RelativeLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginTop="@dimen/dp_6"
        android:id="@+id/recycler"
        android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>
