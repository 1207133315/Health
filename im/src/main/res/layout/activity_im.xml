<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    tools:context=".activity.activity.IMActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:id="@+id/top"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="小美"
            android:id="@+id/name"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            app:srcCompat="@mipmap/common_icon_back_black_n" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_weight="1"
        android:id="@+id/recycler"
        android:layout_marginTop="6dp"
        android:background="#fff"></androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:paddingVertical="@dimen/dp_6"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/sp_10"
            android:src="@mipmap/common_icon_voice_n"
            android:id="@+id/voice"
            android:layout_centerVertical="true"
            />

        <EditText
            android:layout_width="@dimen/dp_250"
            android:background="#fff"
            android:layout_toRightOf="@+id/voice"
            android:layout_marginLeft="@dimen/sp_10"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:padding="@dimen/dp_10"
            android:id="@+id/context"
            android:layout_height="@dimen/dp_36" />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/common_icon_expression_n"
            android:id="@+id/expression"
           android:layout_toLeftOf="@+id/send"
            android:layout_marginRight="@dimen/sp_10"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/common_icon_send_n"
            android:id="@+id/send"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sp_10"
            />
    </RelativeLayout>
</LinearLayout>
