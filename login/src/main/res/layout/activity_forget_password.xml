<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context="com.bw.health.activity.ForgetPasswordActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_40"
        android:text="忘记密码"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="@dimen/sp_20"/>
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        app:srcCompat="@mipmap/common_icon_back_white_n"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_40"
        />
    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/loginshape"
        android:layout_marginTop="@dimen/dp_170"
        android:alpha="0.7"
        android:layout_height="@dimen/dp_130">
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_240"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/loginshape"
        android:layout_marginTop="@dimen/dp_170"
        android:alpha="0.5"
        android:layout_height="@dimen/dp_136">
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/loginshape"
        android:layout_marginTop="@dimen/dp_170"
        android:layout_height="@dimen/dp_124">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:hint="请输入邮箱账号"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/hqyzm"
                    android:layout_height="@dimen/dp_20"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_10"
                    android:layout_centerVertical="true"
                    android:background="@drawable/loginbtn"
                    android:layout_width="@dimen/dp_58"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/yzm"
                android:layout_width="match_parent"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:hint="请输入验证码"
                android:layout_height="@dimen/dp_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"/>

    </LinearLayout>
    <Button
        android:id="@+id/xiyibu"
        android:layout_width="match_parent"
        android:background="@drawable/loginshape"
        android:text="下一步"
        android:textColor="#3087ea"
        android:layout_marginHorizontal="@dimen/dp_36"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_height="@dimen/dp_36" />
</RelativeLayout>
