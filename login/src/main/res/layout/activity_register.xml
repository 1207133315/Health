<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context="com.bw.health.activity.LoginActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dp_67"
        android:layout_height="@dimen/dp_67"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo1"
        android:layout_marginTop="@dimen/dp_45"/>
    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:background="@drawable/loginshape"
        android:layout_marginTop="@dimen/dp_70"
        android:alpha="0.6"
        android:layout_height="@dimen/dp_357"></LinearLayout>
    <LinearLayout
        android:id="@+id/liner"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_240"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:background="@drawable/loginshape"
        android:layout_marginTop="@dimen/dp_80"
        android:alpha="0.3"
        android:layout_height="@dimen/dp_357"></LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:orientation="vertical"
        android:background="@drawable/loginshape"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_height="@dimen/dp_218">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/login_icon_mail_n"
                android:layout_width="@dimen/dp_24"

                android:layout_height="@dimen/dp_24" />
            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_14"
                android:hint="请输入邮箱"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:orientation="vertical"
        android:background="@drawable/loginshape"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_height="@dimen/dp_357">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/login_icon_mail_n"
                android:layout_width="@dimen/dp_24"

                android:layout_height="@dimen/dp_24" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:hint="请输入邮箱"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/hqyzm"
                    android:layout_height="@dimen/dp_20"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_10"
                    android:layout_centerVertical="true"
                    android:background="@drawable/loginbtn"
                    android:layout_width="@dimen/dp_58"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/register_icon_verification_code_n"
                android:layout_width="@dimen/dp_24"

                android:layout_height="@dimen/dp_24" />
            <EditText
                android:id="@+id/yzm"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_14"
                android:textSize="@dimen/sp_14"
                android:hint="请输入验证码"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/login_icon_lock_n"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/pwd"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:textSize="@dimen/sp_14"
                    android:hint="请输入密码"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/pwd1eye"
                    android:layout_width="@dimen/sp_16"
                    android:layout_height="@dimen/sp_16"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/login_icon_hide_password_n"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/login_icon_lock_n"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/pwd2"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:hint="请再次输入密码"
                    android:textSize="@dimen/sp_14"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/pwd2eye"
                    android:layout_width="@dimen/sp_16"
                    android:layout_height="@dimen/sp_16"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/login_icon_hide_password_n"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/register_icon_invitatiion_code_n"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/yqm"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:hint="请输入邀请码"
                    android:textSize="@dimen/sp_14"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#333333"
                    android:text="选填"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f2f2f2"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"/>
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:background="@drawable/loginbtn"
            android:text="注册"
            android:textColor="#fff"
            android:layout_marginHorizontal="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_height="@dimen/dp_36" />
    </LinearLayout>


</RelativeLayout>
